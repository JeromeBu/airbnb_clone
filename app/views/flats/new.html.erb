<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h3>New appartment</h3>

      <%= simple_form_for [@flat] do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :max_guests %>
        <%= f.input :price_per_night %>
        <%= f.input :photos, as: :attachinary %>
        <%= f.submit "Create new flat", class: "btn btn-primary" %>
      <% end %>
      <br>
      <%= link_to "Back to all flats", flats_path %>
    </div>
  </div>
</div>
